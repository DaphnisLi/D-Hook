// Babel 配置
{
  "presets": [
    "@babel/preset-env", // 解析 ES6+ 的语法, 解析成 ES5, 只能编译语法: 箭头函数、const。Promise 无法编译
    "@babel/preset-react", //解析 React 的语法
    [
      "@babel/preset-typescript",
      {
        "onlyRemoveTypeImports": true
      }
    ]
  ],
  "plugins": [ // 可以按需编译不同的 ES6+ 特性, 例如 Promise，不需要将所有的编译函数都打包。比如需要编译 Promise, 那么只将 Promise 的编译函数打包
    [
      "@babel/plugin-transform-runtime"
    ]
  ],
  "ignore": [ // 不编译
    "node_modules/**"
  ]
}
